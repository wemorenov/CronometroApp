<Window x:Class="Cronometro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cronometro"
        mc:Ignorable="d"
        Title="MainWindow" Height="235" Width="335">
    <Grid Height="225" VerticalAlignment="Top">
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="32,126,0,0" VerticalAlignment="Top" Width="74" Click="btnStart_Click" Height="36"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="125,126,0,0" VerticalAlignment="Top" Width="74" Click="btnStop_Click" RenderTransformOrigin="0.899,0.631" Height="36"/>
        <Button x:Name="btnPause" Content="Pause" HorizontalAlignment="Left" Margin="231,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.403,-0.324" Click="btnPause_Click" Width="72" Height="36"/>
        <Label x:Name="lblTime" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Width="271" Height="100" Content="00:00:00" FontFamily="Calibri" FontSize="72"/>

    </Grid>
</Window>
